<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:appointex.ViewModels"
             x:Class="appointex.EditarServicio"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="*, Auto">

        <ScrollView Grid.Row="0" VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Spacing="0">
                
                <Grid HeightRequest="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Image Grid.RowSpan="2" 
                           Source="{Binding ServiceImageDisplay}"
                           Aspect="AspectFill"
                           HeightRequest="300"/>
                    
                    <BoxView Grid.RowSpan="2" Color="Black" Opacity="0.3"/>
                    
                    <VerticalStackLayout Grid.RowSpan="2" 
                                         VerticalOptions="Center" 
                                         HorizontalOptions="Center"
                                         Spacing="5">
                         <VerticalStackLayout.GestureRecognizers>
                             <TapGestureRecognizer Command="{Binding ChangeImageCommand}"/>
                         </VerticalStackLayout.GestureRecognizers>
                         
                         <Image Source="camera_icon.png" HeightRequest="40" WidthRequest="40"/> 
                         <Label Text="Toca para cambiar" TextColor="White" FontFamily="Montserrat-SemiBold"/>
                    </VerticalStackLayout>

                    <Border Grid.Row="1"
                            BackgroundColor="White"
                            StrokeThickness="0"
                            VerticalOptions="End"
                            HeightRequest="30">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30,30,0,0"/>
                        </Border.StrokeShape>
                    </Border>
                </Grid>

                <VerticalStackLayout Padding="20,10,20,30"
                                     Spacing="20"
                                     BackgroundColor="White">
                    
                    <Grid ColumnDefinitions="*, Auto">
                        <Border Grid.Column="0" StrokeThickness="0" BackgroundColor="Transparent">
                            <Entry Text="{Binding Name}"
                                   FontSize="20"
                                   FontFamily="Montserrat-Bold"
                                   TextColor="Black"
                                   Placeholder="Nombre del servicio"/>
                        </Border>
                        
                        <HorizontalStackLayout Grid.Column="1" VerticalOptions="Center">
                            <Label Text="$" FontSize="24" TextColor="Green" FontFamily="Montserrat-Bold" VerticalOptions="Center"/>
                            <Entry Text="{Binding Price}"
                                   Keyboard="Numeric"
                                   FontSize="24"
                                   FontFamily="Montserrat-Bold"
                                   TextColor="Green"
                                   WidthRequest="80"
                                   HorizontalTextAlignment="End"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#f0f0f0"/>

                    <Label Text="Descripción" FontFamily="Montserrat-Bold" FontSize="14" TextColor="Gray"/>
                    <Border BackgroundColor="#f9f9f9" StrokeThickness="0" Padding="10" StrokeShape="RoundRectangle 10">
                        <Editor Text="{Binding Description}"
                                FontSize="15"
                                TextColor="#535862"
                                FontFamily="Montserrat-Regular"
                                AutoSize="TextChanges"
                                Placeholder="Describe tu servicio..."/>
                    </Border>

                    <BoxView HeightRequest="1" Color="#f0f0f0"/>

                    <Label Text="Configuración"
                           FontFamily="Montserrat-Bold"
                           FontSize="18"
                           Margin="0,10,0,0"/>

                    <Label Text="Duración estimada del servicio:" FontFamily="Montserrat-Medium" FontSize="14" TextColor="Gray"/>
                    
                    <Border BackgroundColor="#f5f5f5"
                            StrokeThickness="0"
                            HeightRequest="55"
                            Padding="15,0"
                            HorizontalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15"/>
                        </Border.StrokeShape>
                        <TimePicker Time="{Binding Duration}"
                                    TextColor="Black"
                                    FontSize="16"
                                    VerticalOptions="Center"
                                    FontFamily="Montserrat-Medium"/>
                    </Border>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <ImageButton Source="flecha_atras.png"
                     Command="{Binding BackCommand}"
                     Grid.Row="0"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     HeightRequest="40"
                     WidthRequest="40"
                     Margin="20,40,0,0"
                     BackgroundColor="#ffd917"
                     CornerRadius="20"
                     Padding="10">
            <ImageButton.Shadow>
                <Shadow Brush="Black" Offset="2,2" Opacity="0.2"/>
            </ImageButton.Shadow>
        </ImageButton>

        <Border Grid.Row="1"
                BackgroundColor="White"
                Padding="20,10,20,30"
                StrokeThickness="0"
                Shadow="{Shadow Brush=Black, Offset='0,-5', Opacity=0.05}">
            <Grid>
                <Button Text="Guardar Cambios"
                        Command="{Binding SaveChangesCommand}"
                        FontFamily="Montserrat-SemiBold"
                        FontSize="18"
                        HeightRequest="60"
                        CornerRadius="30"
                        BackgroundColor="#ffd917"
                        TextColor="Black"/>
                
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   IsVisible="{Binding IsBusy}"
                                   Color="Black"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
            </Grid>
        </Border>

    </Grid>
</ContentPage>