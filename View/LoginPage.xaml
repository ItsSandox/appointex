<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:appointex.ViewModels"
             x:Class="appointex.LoginPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <Border BackgroundColor="#ffd917"
                StrokeThickness="0">
            <Grid Padding="0,30,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <ImageButton
                        Source="flecha_atras.png"
                        HeightRequest="30"
                        Command="{Binding BackCommand}"
                        WidthRequest="30"
                        Margin="15,0,0,0"
                        HorizontalOptions="Start"/>
                    <Label Text="Inicio de Sesión"
                           FontSize="26"
                           FontFamily="Montserrat-SemiBold"
                           Margin="15,15,15,6"/>
                    <Label Text="Accede a tu cuenta para seguir justo donde estabas."
                           FontSize="15"
                           FontFamily="Montserrat-Regular"
                           Margin="15,0,0,20"
                           WidthRequest="300"
                           HorizontalOptions="Start"
                           Grid.Row="1"/>
                </StackLayout>

                <Border Grid.Row="1"
                        BackgroundColor="White"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="50,50,0,0"/>
                    </Border.StrokeShape>
                </Border>
                <Grid Grid.Row="1" RowDefinitions="Auto,*" Padding="0,0,0,30">
                    <VerticalStackLayout Grid.Row="0">
                    <Border Grid.Row="1"
                            HeightRequest="60"
                            Margin="15,40,15,0"
                            Padding="15"
                            BackgroundColor="#f5f5f5"
                            StrokeThickness="0"
                            VerticalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30"/>
                        </Border.StrokeShape>
                        <Entry Placeholder="Correo"
                                TextColor="Black"
                                HeightRequest="100"
                                FontFamily="Montserrat-Medium"
                                FontSize="16"
                                PlaceholderColor="#535862"/>
                    </Border>

                    <Border Grid.Row="1"
                            HeightRequest="60"
                            Margin="15,10,15,0"
                            Padding="15"
                            BackgroundColor="#f5f5f5"
                            StrokeThickness="0"
                            VerticalOptions="Start">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="30"/>
                        </Border.StrokeShape>
                        <Entry Placeholder="Contraseña"
                                TextColor="Black"
                                HeightRequest="100"
                                FontFamily="Montserrat-Medium"
                                FontSize="16"
                                PlaceholderColor="#535862"/>
                    </Border>

                    <Label Text="¿Olvidaste tu contraseña?"
                            TextColor="#535862"
                            HorizontalOptions="End"
                            Margin="15,20"
                            FontFamily="Montserrat-Medium"/>
                    </VerticalStackLayout>
                    <Button Text="Iniciar Sesión"
                            BackgroundColor="Black"
                            Grid.Row="1"
                            Command="{Binding LoginCommand}"
                            TextColor="White"
                            CornerRadius="30"
                            HeightRequest="60"
                            FontFamily="Montserrat-Medium"
                            FontSize="18"
                            Margin="15,0"
                            VerticalOptions="End"/>
                </Grid>
            </Grid>
        </Border>
    </ScrollView>

</ContentPage>
